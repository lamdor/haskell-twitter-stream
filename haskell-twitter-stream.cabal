build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  hs-source-dirs: src

  exposed-modules:     Learning.Twitter.Stream
                     , Learning.Twitter.OAuth
                     , Learning.Twitter.URL
                     , Learning.Twitter.Conduit

  other-modules:       Learning.Conduit

  build-depends:       aeson
                     , authenticate-oauth
                     , base >=4.7 && <4.8
                     , bytestring
                     , conduit
                     , conduit-extra
                     , exceptions
                     , http-conduit
                     , resourcet
                     , transformers
                     , transformers-base

  default-language:    Haskell2010

executable haskell-twitter-stream-exec
  main-is: Main.hs
  hs-source-dirs: main
  build-depends: haskell-twitter-stream
               , base >=4.7 && <4.8
               , resourcet